<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileScanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/man_color"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="-1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingBottom="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Tên"
                            android:textSize="24dp"
                            android:textColor="#212529"
                            android:fontFamily="@font/roboto_medium"/>
                        <TextView
                            android:id="@+id/cv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Công việc"
                            android:textSize="20dp"
                            android:textColor="#212529"
                            android:fontFamily="@font/roboto"/>
                        <TextView
                            android:id="@+id/cty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Công ty"
                            android:textSize="20dp"
                            android:textColor="#212529"
                            android:fontFamily="@font/roboto"/>
                        <View
                            android:id="@+id/horizontalLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#212529"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_phone"/>

                                <TextView
                                    android:id="@+id/dienthoai"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="Điện thoại"
                                    android:textColor="#495057"
                                    android:textSize="20dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_email"/>
                                <TextView
                                    android:layout_marginLeft="30dp"
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="20dp"
                                    android:textColor="#495057"
                                    android:fontFamily="@font/roboto"/>
                            </LinearLayout>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnesave"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:backgroundTint="#212529"
                                app:icon="@drawable/ic_floppy_disk"
                                app:iconTint="#f8f9fa"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Lưu"
                                android:textAllCaps="false"
                                android:textColor="#f8f9fa"
                                android:textSize="16sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>