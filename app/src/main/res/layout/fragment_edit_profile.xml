<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/man_color"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="-1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingBottom="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:layout_marginTop="60dp"
                            android:id="@+id/hoten"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="15dp"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Họ tên"
                            android:inputType="textPersonName"
                            android:padding="15dp"
                            android:textColor="#212529"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/congty"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="15dp"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Công ty"
                            android:inputType="textPersonName"
                            android:padding="15dp"
                            android:textColor="#212529"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/congviec"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="15dp"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Công việc"
                            android:inputType="textPersonName"
                            android:padding="15dp"
                            android:textColor="#212529"
                            android:textSize="16sp"/>

<!--                        <EditText-->
<!--                            android:id="@+id/email"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="60dp"-->
<!--                            android:layout_marginBottom="15dp"-->
<!--                            android:ems="10"-->
<!--                            android:fontFamily="@font/roboto"-->
<!--                            android:hint="Email"-->
<!--                            android:inputType="textEmailAddress"-->
<!--                            android:padding="15dp"-->
<!--                            android:textColor="#212529"-->
<!--                            android:textSize="16sp"/>-->

                        <EditText
                            android:id="@+id/dienthoai"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="15dp"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Điện thoại"
                            android:inputType="phone"
                            android:padding="15dp"
                            android:textColor="#212529"
                            android:textSize="16sp"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/capnhap"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Cập nhập"
                            android:backgroundTint="#212529"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>